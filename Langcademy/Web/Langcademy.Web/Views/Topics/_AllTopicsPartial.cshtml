@model IEnumerable<Langcademy.Web.ViewModels.Topics.TopicViewModel>


<div class="container">

    <!-- Marketing Icons Section -->
    <div class="row">
       

        @foreach (var topic in Model)
        {
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><i class="fa fa-book"></i> @topic.Name</h4>
                    </div>
                    <div class="panel-body">
                        <p>Description: @topic.Description</p>
                        <p>Number of words: @topic.NumberOfWordsToTranslate</p>
                        <p>@*Created by: @topic.Creator.UserName*@</p>
                        <p>Created on: @topic.CreatedOn</p>
                        @*@Html.ActionLink("LinkText", "FooAction", "FooController", null, new { @class = "btn btn-info" })*@

                        @Html.ActionLink("Details", "Details", new { id = @topic.Id})


                        @*<a href="#" class="btn btn-default">Learn More</a>*@
                    </div>
                </div>
            </div>
            
       
        }
    </div>